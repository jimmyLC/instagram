<% if current_user %>
  Hi, <%= current_user.name %>
  <%= current_user.email %>
  <%= link_to "logout", auth_signout_path, method: :delete %>
<% else %>
  <%= link_to "Facebook login", "/auth/facebook" %>
<% end %>

<h1>Show Photos</h1>
<% @photos.each do |photo| %>
  <%= link_to image_tag(photo.avatar.url(:medium)), photo_path(photo) %>
  <%= link_to "Like" %>
<% end %>

<h1>Upload Photos</h1>
<%= form_for Photo.new, :url => photos_path, :html => { :multipart => true }, :method => "post" do |f| %>
  <%= f.file_field :avatar %>
  <%= f.submit %>
<% end %>
